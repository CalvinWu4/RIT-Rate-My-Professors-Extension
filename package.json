{
  "name": "rit-rate-my-professor-extension",
  "version": "3.0.0",
  "description": "Shows the Rate My Professors rating of RIT professors while searching for classes on Tiger Center and CSH Schedule Maker.",
  "author": "Calvin Wu",
  "private": true,
  "type": "module",
  "dependencies": {
    "arrive": "^2.4.1",
    "papaparse": "^5.3.0",
    "tippy.js": "^6.3.1"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.22.5",
    "copy-webpack-plugin": "^11.0.0",
    "jest": "^29.5.0",
    "web-ext": "^7.6.2",
    "web-ext-plugin": "^2.8.1",
    "webextension-polyfill": "^0.10.0",
    "webpack": "^5.87.0",
    "webpack-cli": "^5.1.4"
  },
  "scripts": {
    "clean": "rm -rf build/*; rm -rf dist/*",
    "test": "node --experimental-vm-modules node_modules/.bin/jest",
    "build:chrome": "NODE_ENV=production webpack --env browser=chrome --config webpack.config.mjs",
    "build:firefox": "NODE_ENV=production webpack --env browser=firefox --config webpack.config.mjs",
    "build-dev:chrome": "NODE_ENV=development webpack --env browser=chrome --config webpack.config.mjs",
    "build-dev:firefox": "NODE_ENV=development webpack --env browser=firefox --config webpack.config.mjs",
    "release": "npm run clean && npm run build:chrome && npm run build:firefox"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CalvinWu4/RIT-Rate-My-Professor-Extension.git"
  },
  "bugs": {
    "url": "https://github.com/CalvinWu4/RIT-Rate-My-Professor-Extension/issues"
  },
  "homepage": "https://github.com/CalvinWu4/RIT-Rate-My-Professor-Extension#readme"
}
